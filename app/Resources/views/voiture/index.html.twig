{% extends 'BackOfficeBundle:Default:layout.html.twig' %}

{% block content %}
    <h1>Voitures list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Voiture</th>
                <th>Nbplaces</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td><a href="{{ path('voiture_show', { 'id': voiture.id }) }}">{{ voiture.id }}</a></td>
                <td>{{ voiture.voiture }}</td>
                <td>{{ voiture.nbPlaces }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('voiture_show', { 'id': voiture.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('voiture_edit', { 'id': voiture.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voiture_new') }}">Create a new voiture</a>
        </li>
    </ul>
{% endblock %}
