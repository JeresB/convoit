{% extends 'BackOfficeBundle:Default:layout.html.twig' %}

{% block content %}
    <h1>Voiture</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voiture.id }}</td>
            </tr>
            <tr>
                <th>Voiture</th>
                <td>{{ voiture.voiture }}</td>
            </tr>
            <tr>
                <th>Nbplaces</th>
                <td>{{ voiture.nbPlaces }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voiture_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('voiture_edit', { 'id': voiture.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
